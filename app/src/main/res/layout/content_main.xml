<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tech.aaranya.ui.activity.MainActivity"
    android:background="#0f2a41"
    android:animateLayoutChanges="true"
    android:clipToPadding="false">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:fillViewport="true"
        android:focusableInTouchMode="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:weightSum="1"
            android:gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="-10dp"
                android:gravity="top">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView"
                    android:src="@drawable/logo_placeholder"
                    android:layout_marginBottom="24dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="logo" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/mobileNo"
                    android:background="@drawable/rounded_text_uname"
                    android:hint="Username"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textColorHint="#9e9e9e"
                    android:includeFontPadding="false"
                    android:typeface="sans"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="20dp"
                    android:password="false"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:cursorVisible="true"
                    android:contextClickable="false"
                    android:singleLine="true"
                    android:layout_below="@+id/imageView2"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"

                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:drawableLeft="@drawable/user_icon1"
                    android:drawablePadding="10dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/password"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rounded_text_upass"
                    android:hint="Password"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textColorHint="#9e9e9e"
                    android:includeFontPadding="false"
                    android:typeface="sans"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="20dp"
                    android:password="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:cursorVisible="true"
                    android:contextClickable="false"
                    android:inputType="textPassword"
                    android:layout_below="@+id/userName_txt"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignRight="@+id/userName_txt"
                    android:layout_alignEnd="@+id/userName_txt"
                    android:singleLine="true"
                    android:drawableLeft="@drawable/lock"
                    android:drawablePadding="10dp"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:layout_width="195dp"
                    android:layout_height="37dp"
                    android:text="Sign In"
                    android:id="@+id/SignInBtn"
                    android:background="@drawable/button_background"
                    android:textColor="#F9F9F9"
                    android:capitalize="none"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:typeface="sans"
                    android:textStyle="normal|bold"
                    android:clickable="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="7dp"
                    android:layout_marginTop="34dp"
                    android:layout_gravity="center_horizontal"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:onClick="doLogin"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="Forgot Password?"
                    android:id="@+id/textView"
                    android:gravity="center_horizontal"
                    android:inputType="textUri"
                    android:layout_weight="0.07"
                    android:textColor="#f9f9f9"
                    android:typeface="sans"
                    android:paddingTop="10dp"
                    android:textSize="15sp"

                    android:layout_marginTop="34dp"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
